<!DOCTYPE html>
<html lang="en">
  <head>
    <title> Splitwise </title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <nav class="navbar navbar-inverse">
      <div class="navbar-header">
        <a class="navbar-brand logo" href="<%= root_path %>" style="color: white; width: 100px;">Logo</a>
      </div>
      <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav">
          <li data-controller="users"><a href="<%= users_path %>">Users</a></li>
          <li data-controller="events"><a href="<%= events_path %>">Events</a></li>
        </ul>

      </div>
    </nav>
    <% if(notice) %>
      <p id="notice"><%= notice %></p>
    <% end %>

    <div class="container-fluid text-center">
      <div class="row content">
        <div class="col-md-offset-1 col-sm-10 text-left">
          <%= yield %>
        </div>
      </div>
    </div>

  </body>
</html>
<%= javascript_tag do %>
  if("<%= params[:controller] %>" != "client/setting"){
    $("#myNavbar").find("li[data-controller='<%= params[:controller] %>']").addClass("active");
  }
<% end %>
