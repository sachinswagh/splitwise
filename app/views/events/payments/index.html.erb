<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"> Payments for <%= @event.name %> </h1>
  </div>
</div>

<div class="panel">
  <div class="panel-body">
    <table class="table table-striped">
      <thead>
        <tr>
          <th width='10%'>Event</th>
          <th width='10%'>User</th>
          <th width='10%'>Amount</th>
          <th class='text-right' width='20%'>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @payments.each do |payment| %>
          <tr>
            <td width='10%'><%= payment.event.name rescue '' %></td>
            <td width='10%'><%= payment.user.name rescue '' %></td>
            <td width='10%'><%= payment.amount %></td>

            <td class='text-right' width='20%'>
              <%= link_to 'Show', [@event, payment] %>
              <%= link_to 'Edit', edit_event_payment_path(@event, payment) %>
              <%= link_to 'Destroy', [@event, payment], method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class='pull-right'>
  <%= link_to 'New Payment', new_event_payment_path(@event), class: "btn btn-primary", style: "color: white"  %>
</div>
