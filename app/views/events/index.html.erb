<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"> Events </h1>
  </div>
</div>

<div class="panel">
  <div class="panel-body">
    <table class="table table-striped">
      <thead>
        <tr>
          <th width='10%'>Name</th>
          <th width='10%'>Event date</th>
          <th width='10%'>Event location</th>
          <th width='10%'>Total amount</th>
          <th width='10%'>Participants</th>
          <th class='text-right' width='20%'>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td width='10%'><%= event.name %></td>
            <td width='10%'><%= event.event_date %></td>
            <td width='10%'><%= event.event_location %></td>
            <td width='10%'><%= event.total_amount %></td>
            <td width='10%'><%= event.participants %></td>

            <td class='text-right' width='30%'>
              <%= link_to 'View Payments', event_payments_path(event) %>
              <%= link_to 'Create Splits', event_create_splits_path(event) %>
              <%= link_to 'Show', event %>
              <%= link_to 'Edit', edit_event_path(event) %>
              <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class='pull-right'>
  <%= link_to 'New Event', new_event_path, class: "btn btn-primary", style: "color: white"  %>
  <%= link_to 'Manage Events', events_path, class: "btn btn-primary", style: "color: white"  %>
</div>
